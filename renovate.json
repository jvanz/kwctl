{
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": [
    "area/dependencies"
  ],
  "schedule": [
	  "* * * * 0,6"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": "* * * * *"
  },
  "major": {
    "enabled": true,
    "automerge": false
  },
  "minor": {
    "enabled": true,
    "automerge": false
  },
  "patch": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "all patchlevel dependencies",
      "groupSlug": "all-patch",
      "matchPackageNames": [
        "*"
      ],
      "automerge": true,
      "schedule": "* * * * *"
    }
  ],
  "rebaseWhen": "behind-base-branch"
}
